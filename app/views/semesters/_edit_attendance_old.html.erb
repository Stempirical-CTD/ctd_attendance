<h3 class="card-title">Edit</h3>

<div id="roll">
  <%= f.fields_for :students do |ff| %>
    <%= ff.fields_for :attendances_attributes, @attendances.find_by(student: ff.object), index: 0 do |fff| %>
      <%= fff.hidden_field :id %>

      <%= fff.check_box :present %>
      <%= fff.label :present, ff.object.first_name %>
    <% end %>
  <% end %>
</div>
